@model CareHomeMock.Models.CareManagerIndexVM

@{
    ViewBag.Title = "Index";
}

<h2>ケアマネ一覧</h2>

<p>
    @Html.ActionLink("Create New", "Edit", new { careHomeId = Model.CareHomeId, careManagerId = (int?)null })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CareManagers.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareManagers.First().Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareManagers.First().Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareManagers.First().CurrentPatients)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareManagers.First().AllowNewPatient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareManagers.First().ReviewsCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CareManagers.First().Rating)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.CareManagers) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentPatients)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AllowNewPatient)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewsCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { careManagerId = item.CareManagerId }) |
            @Html.ActionLink("Delete", "Delete", new { careManagerId = item.CareManagerId })
        </td>
    </tr>
}

</table>
