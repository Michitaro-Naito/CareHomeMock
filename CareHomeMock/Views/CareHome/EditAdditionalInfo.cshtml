@model CareHomeMock.Models.CareHome
@{
    var title = "追加情報編集";
    ViewBag.Title = title;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new{ enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>@title</h3>
        <hr />
        @Html.ValidationSummary(false)
        @Html.HiddenFor(model => model.CareHomeId)

        @MyHelper.EditorFor(Html, m => m.Region, MyHelper.EditorType.TextArea)
        @MyHelper.EditorFor(Html, m => m.Traits, MyHelper.EditorType.TextArea)
        @MyHelper.EditorFor(Html, m => m.Messages, MyHelper.EditorType.TextArea)

        <div class="form-group">
            <label class="control-label col-md-2">メイン画像</label>
            <div class="col-md-10">
                <span>JPEGかPNG、GIF。200kBまで。</span>
                <input type="file" name="file" accept="image/jpeg, image/jpg, image/png, image/gif" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存する" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
}

<div>@Html.ActionLink("Back to Menu", "CareHomeMenu", "Home")</div>
