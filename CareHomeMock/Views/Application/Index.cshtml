@model IEnumerable<CareHomeMock.Models.Application>

@{
    var title = "事業所登録申請一覧";
    ViewBag.Title = title;
}

<h2>@title</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.CareHome.CareHomeCode)</th>
        <th>@Html.DisplayNameFor(model => model.CareHome.CompanyName)</th>
        <th>@Html.DisplayNameFor(model => model.IpAddress)</th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.CareHome.CareHomeCode)</td>
        <td>@Html.DisplayFor(modelItem => item.CareHome.CompanyName)</td>
        <td>@Html.DisplayFor(modelItem => item.IpAddress)</td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("承認", "Approve", new { id = item.ApplicationId })
            @Html.ActionLink("拒否", "Reject", new { id = item.ApplicationId })
            @Html.ActionLink("削除", "Delete", new { id=item.ApplicationId })
        </td>
    </tr>
}

</table>

<div>@Html.ActionLink("Back to Menu", "AdminMenu", "Home")</div>
