<!DOCTYPE html>
<html>
<head>
@{
    var shortUrl = ViewBag.ShortUrl ?? Request.Url.AbsoluteUri;
}
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ケアマネ情報局</title>

    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="~/StaticPage/Css" rel="stylesheet" type="text/css">

    @Scripts.Render("~/bundles/modernizr")

    <!-- Google Analytics -->
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-1547003-14', 'auto');
        ga('send', 'pageview');
    </script>
    <!-- /Google Analytics -->

</head>
<body>
    <div id="wrap" class="grid_1200">

        <header>
            <div class="top-header">
                <div class="container">
                    <div class="col-md-5 top-email">全国の居宅介護支援事業所とケアマネジャーの紹介サイト</div>
                    <div class="col-md-7">
                        <div class="right">
                            <div class="left">@Html.Partial("_LoginPartial")</div>
                            <div class="social-ul">
                                <ul>
                                    <li class="social-twitter"><a href="https://twitter.com/care_review" target="_blank"><i class="fa fa-twitter"></i></a></li>
                                    <li class="social-facebook"><a href="https://www.facebook.com/carereviewjp" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                    <li class="social-google"><a href="https://www.google.com/+carereview" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- End container -->
        </header><!-- End header -->
        <header>
            <nav class="navbar navbar-inverse" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="logo"><a href="@Url.Action("Index", "Home")"><img alt="" src="~/Content/images/carema_logo.png"></a></div>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            @{
                                var controller = ViewContext.RouteData.Values["controller"].ToString();
                                var action = ViewContext.RouteData.Values["action"].ToString();
                                var active = "";
                            }
                            @if (action == "Index" && controller == "Home") { active = "active"; } else { active = ""; }
                            <li class="@active">@Html.ActionLink("地図検索", "Index", "Home")</li>
                            @if (action == "CareHomeSearch" && controller == "Home") { active = "active"; } else { active = ""; }
                            <li class="@active">@Html.ActionLink("事業所検索", "CareHomeSearch", "Home")</li>
                            @if (action == "CareManagerSearch" && controller == "Home") { active = "active"; } else { active = ""; }
                            <li class="@active">@Html.ActionLink("ケアマネ検索", "CareManagerSearch", "Home")</li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </nav>
            <!-- End container -->
        </header><!-- End header -->
        <section>
            <div class="container section-main-container">
                <!--Top start-->
                <div class="center top-ad">
                    @if (IsMobile)
                    {
                        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                        <!-- caremgr_mobile -->
                        <ins class="adsbygoogle"
                             style="display:inline-block;width:320px;height:100px"
                             data-ad-client="ca-pub-4974907436165676"
                             data-ad-slot="2274491756"></ins>
                        <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    }
                    else
                    {
                        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                        <!-- caremgr_top -->
                        <ins class="adsbygoogle"
                             style="display:inline-block;width:728px;height:90px"
                             data-ad-client="ca-pub-4974907436165676"
                             data-ad-slot="2414092558"></ins>
                        <script>
                            (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    }
                </div>
                <!--Top end-->
                <div class="row">
                    <!--Left panel start-->
                    <div class="col-md-8">
                        @RenderBody()
                    </div>
                    <!--Left panel end-->
                    <!--Right panel start-->
                    <div class="col-md-4">
                        <ul class="snsb">
                            <li>
                                <!-- Twitter -->
                                <a href="https://twitter.com/share" class="twitter-share-button" data-count="vertical" data-url="@shortUrl" data-counturl="@Request.Url.AbsoluteUri">Tweet</a>
                                <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');</script>
                            </li>
                            <li>
                                <!-- Facebook -->
                                <div id="fb-root"></div>
                                <script>
                                    (function (d, s, id) {
                                        var js, fjs = d.getElementsByTagName(s)[0];
                                        if (d.getElementById(id)) return;
                                        js = d.createElement(s); js.id = id;
                                        js.src = "//connect.facebook.net/ja_JP/sdk.js#xfbml=1&appId=616515881759269&version=v2.0";
                                        fjs.parentNode.insertBefore(js, fjs);
                                    }(document, 'script', 'facebook-jssdk'));
                                </script>
                                <div class="fb-like" data-href="@shortUrl" data-layout="box_count" data-action="like" data-show-faces="false" data-share="false"></div>
                            </li>
                            <li>
                                <!-- head 内か、body 終了タグの直前に次のタグを貼り付けてください。 -->
                                <script src="https://apis.google.com/js/platform.js" async defer>
                                    { lang: 'ja' }
                                </script>

                                <!-- +1 ボタン を表示したい位置に次のタグを貼り付けてください。 -->
                                <div class="g-plusone" data-size="tall"></div>
                            </li>
                        </ul>
                        <!--right navigation start-->
                        <div class="right-navigation">
                            <h3>Information</h3>
                            <div>@Html.Action("MainLinks", "Partial")</div>
                        </div>
                        <!--right navigation end-->
                        <!--right add-->
                        <div class="rgt-ad-blo">
                            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                            <!-- caremgr_rectangle1 -->
                            <ins class="adsbygoogle"
                                 style="display:inline-block;width:300px;height:250px"
                                 data-ad-client="ca-pub-4974907436165676"
                                 data-ad-slot="6844292159"></ins>
                            <script>
                                (adsbygoogle = window.adsbygoogle || []).push({});
                            </script>
                        </div>
                        <!--right add-->
                        <div class="rgt-ad-blo">
                            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                            <!-- caremgr_rectangle2 -->
                            <ins class="adsbygoogle"
                                 style="display:inline-block;width:300px;height:250px"
                                 data-ad-client="ca-pub-4974907436165676"
                                 data-ad-slot="8321025359"></ins>
                            <script>
                                (adsbygoogle = window.adsbygoogle || []).push({});
                            </script>
                        </div>
                    </div>
                    <!--Right panel end-->

                </div>
                <!--Bottom ads here-->
                <!--Top start-->
                <div class="center top-ad">@*<img alt="" src="~/Content/images/bottom-ad.png">*@</div>
                <!--Top end-->
            </div>
        </section>
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h4>About Us</h4>
                        <div class="aboutus">
                            <p>このサイトは株式会社ケアレビューが運営しています。</p>
                            <ul>
                                <li><a href="http://hospia.jp/" target="_blank">・病院情報局</a></li>
                                <li><a href="http://caremap.jp/" target="_blank">・医療介護情報局</a></li>
                                <li><a href="http://jmap.jp/" target="_blank">・地域医療情報システム</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h4>Information</h4>
                        <div class="ftr-navigation">@Html.Action("MainLinks", "Partial")</div>
                    </div>
                    <div class="col-md-4">
                        <h4>Follow us</h4>
                        <div class="row ftr-social">
                            <div class="col-md-6">
                                <a href="https://twitter.com/care_review" target="_blank"><i class="fa fa-twitter"></i>Twitter</a>
                            </div>
                            <div class="col-md-6">
                                <a href="https://www.facebook.com/carereviewjp" target="_blank"><i class="fa fa-facebook"></i>Facebook</a>
                            </div>
                            <div class="col-md-6">
                                <a href="https://www.google.com/+carereview" target="_blank"><i class="fa fa-google-plus"></i>Google Plus</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <footer class="copyright">
            <div class="container">
                <div class="center">Copyright Care Review, Inc. All Rights Reserved.</div>
                <!--<div class="col-md-5">Copyright Care Review, Inc. All Rights Reserved.</div>
                <div class="col-md-7 txt-rgt">Developed By: Amlitek.com</div>-->
            </div>
        </footer>
        
    </div><!-- End wrap -->

    <!-- Flash Modal -->
    <div class="modal fade" id="FlashModal" tabindex="-1" role="dialog" aria-labelledby="FlashModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="FlashModalLabel">お知らせ</h4>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>



    <script src="~/Scripts/linq.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/knockout/3.1.0/knockout-min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/utility.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
