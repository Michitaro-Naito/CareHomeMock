<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ケアマネ情報局</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrap" class="grid_1200">

        <header>
            <div class="top-header">
                <div class="container">
                    <div class="col-md-5 top-email">
                        <i class="fa fa-envelope"></i><a href="mailto:mail@carehomes.com">mail@carehomes.com</a>
                        <i class="fa fa-phone"></i>1-234-567-8900
                    </div>
                    <div class="col-md-7">
                        <div class="right">
                            <div class="left">@Html.Partial("_LoginPartial")</div>
                            <div class="social-ul">
                                <ul>
                                    <li class="social-twitter"><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li class="social-facebook"><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li class="social-google"><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- End container -->
        </header><!-- End header -->
        <header>
            <nav class="navbar navbar-inverse" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="logo"><a href="#"><img alt="" src="~/Content/images/logo.png"></a></div>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            @{
                                var controller = ViewContext.RouteData.Values["controller"].ToString();
                                var action = ViewContext.RouteData.Values["action"].ToString();
                                var active = "";
                            }
                            @if (action == "Index" && controller == "Home") { active = "active"; } else { active = ""; }
                            <li class="@active">@Html.ActionLink("地図検索", "Index", "Home")</li>
                            @if (action == "CareHomeSearch" && controller == "Home") { active = "active"; } else { active = ""; }
                            <li class="@active">@Html.ActionLink("事業所検索", "CareHomeSearch", "Home")</li>
                            @if (action == "CareManagerSearch" && controller == "Home") { active = "active"; } else { active = ""; }
                            <li class="@active">@Html.ActionLink("ケアマネ検索", "CareManagerSearch", "Home")</li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </nav>
            <!-- End container -->
        </header><!-- End header -->
        <section>
            <div class="container section-main-container">
                <!--Top start-->
                <div class="center top-ad"><img alt="" src="~/Content/images/top-ad.png"></div>
                <!--Top end-->
                <div class="row">
                    <!--Left panel start-->
                    <div class="col-md-8">
                        @RenderBody()
                    </div>
                    <!--Left panel end-->
                    <!--Right panel start-->
                    <div class="col-md-4">
                        <!--right navigation start-->
                        <div class="right-navigation">
                            <h3>Main Links</h3>
                            <ul>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>About us</a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>Press release</a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>Terms of service</a></li></a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>Privacy Policy</a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>Careers</a></li>
                            </ul>
                        </div>
                        <!--right navigation end-->
                        <!--right add-->
                        <div class="rgt-ad-blo">
                            <img alt="" src="~/Content/images/right-ad01.png">
                        </div>
                        <!--right add-->
                        <div class="rgt-ad-blo">
                            <img alt="" src="~/Content/images/right-ad02.png">
                        </div>
                    </div>
                    <!--Right panel end-->

                </div>
                <!--Top start-->
                <div class="center top-ad"><img alt="" src="~/Content/images/bottom-ad.png"></div>
                <!--Top end-->
            </div>
            @{
                //Html.Partial("_LoginPartial");
            }
        </section>
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h4>About Us</h4>
                        <div class="aboutus">
                            <p>Consectetur adipiscing elit aeneane lorem lipsum, condimentum ultrices consequat eu, vehicula mauris lipsum adipiscing lipsum aenean orci lorem.</p>
                            <p>Asequat lorem ipsum dolor lorem sit amet, consectetur adipiscing dolor elit. Aenean nisl orci, condimentum.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h4>Main Links</h4>
                        <div class="ftr-navigation">
                            <ul>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>About us</a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>Press release</a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>Terms of service</a></li></a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>Privacy Policy</a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i>Careers</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h4>Follow us</h4>
                        <div class="row ftr-social">
                            <div class="col-md-6">
                                <a href="#"><i class="fa fa-twitter"></i>Twitter</a>
                            </div>
                            <div class="col-md-6">
                                <a href="#"><i class="fa fa-facebook"></i>Facebook</a>
                            </div>
                            <div class="col-md-6">
                                <a href="#"><i class="fa fa-google-plus"></i>Google Plus</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <footer class="copyright">
            <div class="container">
                <div class="col-md-5">© Copyright @DateTime.Now.Year by Care Homes. All Rights Reserved. </div>
                <div class="col-md-7 txt-rgt">Developed By: Net Magnetic</div>
            </div>
        </footer>
        
    </div><!-- End wrap -->



    <script src="~/Scripts/linq.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    <script src="http://cdnjs.cloudflare.com/ajax/libs/knockout/3.1.0/knockout-min.js"></script>
    <script src="~/Scripts/utility.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
